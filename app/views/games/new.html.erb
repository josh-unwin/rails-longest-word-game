<h1>New Game</h1>
<% start_time = Time.now %>

<ul class="letters">
    <% @letters.each do |letter| %>
        <li class="letter"><%= letter %></li>
    <% end %>
</ul>


<h2>What is the longest word you can find?</h2>
<form action="/score" class="user_input" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, start_time %>
  <input type="text" name="user_word" placeholder="Your word" class="user_word">
  <input type="submit" class="submit">
</form>

<p>Your session score: <%= session[:user_score] %></p>
